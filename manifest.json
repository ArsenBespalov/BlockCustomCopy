{
  "manifest_version": 2,
  "default_locale": "ru",
  "name": "__MSG_APP_NAME__",
  "version": "1.0.0",
  "description": "__MSG_APP_DESCRIPTION__",
  "display_in_launcher": false,
  "display_in_new_tab_page": false,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "author": "Arsen Bespalov",
  "homepage_url": "https://github.com/ArsenBespalov/BlockCustomCopy",

  "content_scripts": [
    {
      "js": ["script.js"],
      "matches": [ "http://*/*", "https://*/*", "file:///*" ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "minimum_chrome_version": "56",

  "permissions": [
    "tabs"
  ]
}